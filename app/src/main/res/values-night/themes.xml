<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CheckListComplete" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2962FF</item>
        <item name="colorPrimaryVariant">#64DD17</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFAB00</item>
        <item name="colorSecondaryVariant">@color/purple_500</item>
        <item name="colorOnSecondary">#2962FF</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/purple_200</item>
        <item name="cardBackgroundColor">@color/purple_500</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/green</item>
    </style>

    <style name="Theme.CheckListComplete.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CheckListComplete.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CheckListComplete.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>